{% extends 'base.html.twig' %}

{% block body %}
    <h1>Photo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ photo.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ photo.title }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ photo.libelle }}</td>
            </tr>
            <tr>
                <th>Datecreate</th>
                <td>{% if photo.dateCreate %}{{ photo.dateCreate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{% if entity.online %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('photo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('photo_edit', { 'id': photo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
